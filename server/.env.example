# Copy this file to server/.env and fill in values
# IMPORTANT: Keep credentials secret. Do NOT commit the real .env into version control.

# SMTP server configuration (defaults configured for Gmail secure SMTP)
# For Gmail secure SMTP use: SMTP_HOST=smtp.gmail.com and SMTP_PORT=465
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
# Set to true to use TLS on connect (465). If you prefer STARTTLS (587), set to false.
SMTP_SECURE=true

# Preferred env names for this repo
EMAIL_USER=you@example.com
EMAIL_PASS=your_app_password_here

# Backwards-compatible names (optional)
SMTP_USER=you@example.com
SMTP_PASS=your_app_password_here

# Optional: from address
FROM_EMAIL=you@example.com

# Server port
PORT=3001

# The email address that should receive contact-form messages (defaults to SMTP_USER)
RECEIVER_EMAIL=ramarv7859@gmail.com

 CORS_ORIGIN=http://localhost:5173

# Pooling / timeouts
SMTP_POOL=true
SMTP_MAX_CONNECTIONS=5
SMTP_CONNECTION_TIMEOUT=30000
SMTP_SOCKET_TIMEOUT=30000

# The email address that should receive contact-form messages (defaults to SMTP_USER / EMAIL_USER)
RECEIVER_EMAIL=you@example.com
